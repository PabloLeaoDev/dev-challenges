<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Contact</h1>
            <p class="text-center lead">Create or edit your contacts bellow.</p>

            <%- include('includes/messages') %>

            <% if (contact._id) { %>
            <form action="/contact/edit/<%= contact._id %>" method="post">
            <% } else { %>
            <form action="/contact/register" method="post">
            <% } %>
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input value="<%= contact.name %>" type="text" class="form-control" name="name" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Middlename</label>
                    <input value="<%= contact.middlename %>" type="text" class="form-control" name="middlename">
                </div>
                <div class="mb-3">
                    <label class="form-label">E-mail</label>
                    <input value="<%= contact.email %>" type="email" class="form-control" name="email">
                </div>
                <div class="mb-3">
                    <label class="form-label">Phone number</label>
                    <input value="<%= contact.phoneNumber %>" type="tel" class="form-control" name="phoneNumber">
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>

        </div>
        <div class="col-lg-2"></div>
    </div>
</div>
<%- include('includes/footer') %>