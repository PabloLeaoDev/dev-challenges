<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Login</h1>
            <p class="text-center lead">Log in or create your account below</p>

            <%- include('includes/messages') %>

            <div class="row">
                <div class="col-lg my-5">
                    <h4>Register now</h4>
                    <p>Case you haven't an account, complete the form bellow</p>
                    <form class="form-register" action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="mb-3">
                            <label class="form-label">Your email address</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Your password</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Create my account</button>
                    </form>
                </div>

                <div class="col-lg my-5">
                    <h4>Entrar no site</h4>
                    <p>Case you have an account, to do login bellow</p>
                    <form class="form-login" action="/login/login" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="mb-3">
                            <label class="form-label">Your email address</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Your password</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Login in my account</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>
<%- include('includes/footer') %>